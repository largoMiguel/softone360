# ========== DATABASE ==========
# Local: usa SQLite (comentar DATABASE_URL o dejarlo vacío)
# Producción: usa PostgreSQL RDS (descomentar la línea de abajo)
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# ========== JWT & Security ==========
SECRET_KEY=change-this-to-a-secure-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ========== OpenAI (opcional) ==========
OPENAI_API_KEY=

# ========== Environment ==========
ENVIRONMENT=development
DEBUG=True

# ========== CORS ==========
# Orígenes permitidos separados por coma (sin espacios)
ALLOWED_ORIGINS=http://localhost:4200,https://your-domain.com

# ========== AWS (para obtener secrets y otros recursos) ==========
# Configura tus credenciales AWS aquí o usa ~/.aws/credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
AWS_S3_BUCKET_PHOTOS=your-photos-bucket
AWS_S3_BUCKET_ASISTENCIA=your-asistencia-bucket

# ========== Superadmin (para seed inicial) ==========
SUPERADMIN_USERNAME=admin
SUPERADMIN_EMAIL=admin@example.com
SUPERADMIN_PASSWORD=ChangeMe!2025

# ========== Migration Secret ==========
MIGRATION_SECRET_KEY=your-migration-secret-key

# ========== Backend URL ==========
BACKEND_URL=http://localhost:8000

# ========== AWS SES Email Configuration ==========
AWS_SES_REGION=us-east-1
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=Sistema PQRS

# ========== Frontend URL ==========
FRONTEND_URL=http://localhost:4200

# ========== Timezone ==========
TIMEZONE=America/Bogota
